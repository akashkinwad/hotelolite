.kt-header__topbar
  #kt_quick_search_toggle.kt-header__topbar-item.kt-header__topbar-item--search.dropdown
    .kt-header__topbar-item.dropdown
      .kt-header__topbar-item.dropdown
        .kt-header__topbar-item.kt-header__topbar-item--user
          .kt-header__topbar-wrapper{"data-offset" => "0px,0px", "data-toggle" => "dropdown"}
            .kt-header__topbar-user
              %span.kt-header__topbar-welcome.kt-hidden-mobile Hi,
              %span.kt-header__topbar-username.kt-hidden-mobile
                = current_admin.admin_name.capitalize
              %img.kt-hidden{:alt => "Pic", :src => "/assets/admin_theme/media/users/300_25.jpg"}/
              / use below badge element instead the user avatar to display username's first letter(remove kt-hidden class to display it)
              %span.kt-badge.kt-badge--username.kt-badge--unified-success.kt-badge--lg.kt-badge--rounded.kt-badge--bold
                = current_admin.name_abbrivation
          .dropdown-menu.dropdown-menu-fit.dropdown-menu-right.dropdown-menu-anim.dropdown-menu-top-unround.dropdown-menu-xl
            / begin: Head
            .kt-user-card.kt-user-card--skin-dark.kt-notification-item-padding-x{:style => "background-image: url(/assets/admin_theme/media/misc/bg-1.jpg)"}
              .kt-user-card__avatar
                %img.kt-hidden{:alt => "Pic", :src => "/assets/admin_theme/media/users/300_25.jpg"}/
                / use below badge element instead the user avatar to display username's first letter(remove kt-hidden class to display it)
                %span.kt-badge.kt-badge--lg.kt-badge--rounded.kt-badge--bold.kt-font-success
                  = current_admin.name_abbrivation
              .kt-user-card__name
                = current_admin.admin_name.capitalize
              .kt-user-card__badge
                %span.btn.btn-success.btn-sm.btn-bold.btn-font-md 23 messages
            / end: Head
            / begin: Navigation
            .kt-notification
              = link_to edit_admin_admin_path(current_admin), class: 'kt-notification__item' do
                .kt-notification__item-icon
                  %i.flaticon2-calendar-3.kt-font-success
                .kt-notification__item-details
                  .kt-notification__item-title.kt-font-bold
                    My Profile
                  .kt-notification__item-time
                    Admin Profile
              .kt-notification__custom.kt-space-between
                = link_to('Sign Out', destroy_admin_session_path, method: :delete, class: 'btn btn-label btn-label-brand btn-sm btn-bold')

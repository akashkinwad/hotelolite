.kt-header__topbar.kt-grid__item
  #kt_quick_search_toggle.kt-header__topbar-item.kt-header__topbar-item--search.dropdown
    .kt-header__topbar-item.dropdown
      .kt-header__topbar-item.dropdown
        .kt-header__topbar-item.kt-header__topbar-item--user
          .kt-header__topbar-wrapper{"data-offset" => "10px,0px", "data-toggle" => "dropdown"}
            %span.kt-header__topbar-welcome Hi,
            %span.kt-header__topbar-username
              = current_user.user_name.capitalize
            %span.kt-header__topbar-icon
              %b
                = current_user.name_abbrivation
            %img.kt-hidden{alt: "Pic", src: "/assets/admin_theme/media/users/100_5.jpg"}/
          .dropdown-menu.dropdown-menu-fit.dropdown-menu-right.dropdown-menu-anim.dropdown-menu-xl
            .kt-user-card.kt-user-card--skin-dark.kt-notification-item-padding-x{style: "background-image: url(/assets/user/media/misc/bg-1.jpg)"}
              .kt-user-card__avatar
                %img.kt-hidden{alt: "Pic", src: "/assets/admin_theme/media/users/100_5.jpg"}/
                %span.kt-badge.kt-badge--lg.kt-badge--rounded.kt-badge--bold.kt-font-success
                  = current_user.name_abbrivation
              .kt-user-card__name
                = current_user.user_name.capitalize.truncate(10)
            .kt-notification
              = link_to edit_user_path(current_user), class: 'kt-notification__item' do
                .kt-notification__item-icon
                  %i.flaticon2-calendar-3.kt-font-success
                .kt-notification__item-details
                  .kt-notification__item-title.kt-font-bold
                    My Profile
                  .kt-notification__item-time
                    User settings
            .kt-notification
              %a.kt-notification__item{href: "/users/edit"}
                .kt-notification__item-icon
                  %i.flaticon2-lock.kt-font-brand
                .kt-notification__item-details
                  .kt-notification__item-title.kt-font-bold
                    Security
                  .kt-notification__item-time
                    Account settings
              .kt-notification__custom.kt-space-between
                = link_to('Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-label btn-label-brand btn-sm btn-bold')

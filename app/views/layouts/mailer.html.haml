%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    :css
        .button {
          background-color: #4CAF50;
          border: none;
          color: white;
          padding: 8px 32px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          cursor: pointer;
          border-radius: 8px
        }
        .head{
          color: black;
        }
        .title{
          color: green;
        }

        h6{
          font-style: italic;
          height: 15px;
        }

        .row{
          display: grid;
          grid-template-columns: auto auto;
          height: 50px;
        }

        .col1{
          text-align: right;
          padding-right: 20px;
          height:50px ;
        }

        .col2{
          text-align: left;
          padding-left: 20px;
        }

        .user_name{
          color: Tomato;
        }

    %title GamePlans
  %body
    %div{:style => "background:#ffffff;margin:0;padding:80;text-align:left"}
      %table{:bgcolor => "", :border => "0", :cellpadding => "0", :cellspacing => "0",:align => "center", :height => "100%", :width => "80%"}
        %tbody
          = render partial: "/layouts/mailer_layout/head_body"
          %tr
            %td{:align => "center", :height => "100%", :style => "padding-bottom:25px", :valign => "top", :width => "100%"}
              %table{:align => "center", :bgcolor => "", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                %tbody
                  %tr
                    %td{:align => "center", :style => "padding:0px 15px 0px 15px;font-size:26px;line-height:36px"}
                      %span{:style => "font-family:'Source',Arial,sans-serif;font-size:26px;line-height:36px;color:#162338"}
                        = yield
          = render partial: "layouts/mailer_layout/footer"

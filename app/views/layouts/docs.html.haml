%html{lang: "en"}
  %head
    %meta{content: "text/html;charset=UTF-8", "http-equiv" => "content-type"}
    %meta{charset: "utf-8"}
    %title Hoteloite | API Documentaion
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{content: "Updates and statistics", name: "description"}
    %meta{content: "width=device-width, initial-scale=1, shrink-to-fit=no", name: "viewport"}
    / begin::Fonts
    %script{src: "/assets/admin/fonts/webfont.js"}
    :javascript
      WebFont.load({
          google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
          active: function() {
              sessionStorage.fonts = true;
          }
      });
    / end::Fonts
    / begin::Page Vendors Styles(used by this page)
    %link{href: "/assets/admin_theme/vendors/custom/fullcalendar/fullcalendar.bundle.css", rel: "stylesheet", type: "text/css"}
    / end::Page Vendors Styles
    / begin::Global Theme Styles(used by all pages)
    %link{href: "/assets/admin_theme/vendors/global/vendors.bundle.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/admin_theme/css/demo1/style.bundle.css", rel: "stylesheet", type: "text/css"}
    / end::Global Theme Styles
    / begin::Layout Skins(used by all pages)
    %link{href: "/assets/admin_theme/css/demo1/skins/header/base/light.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/admin_theme/css/demo1/skins/header/menu/light.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/admin_theme/css/demo1/skins/brand/dark.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/admin_theme/css/demo1/skins/aside/dark.css", rel: "stylesheet", type: "text/css"}
    / end::Layout Skins
    %link{href: "/assets/user/media/logos/favicon.ico", rel: "shortcut icon"}
    / end::Head
    / begin::Body
  %body.kt-quick-panel--right.kt-demo-panel--right.kt-offcanvas-panel--right.kt-aside--enabled.kt-aside--fixed.kt-page--loading.kt-header-mobile--fixed
    / begin:: Page
    / begin:: Header Mobile
    #kt_header_mobile.kt-header-mobile.kt-header-mobile--fixed
      .kt-header-mobile__logo
        %a{:href => "index.html"}
          %img{:alt => "Logo", src: "/assets/user/media/logos/gp_2.png", height: '22px'}/
      .kt-header-mobile__toolbar
        %button#kt_aside_mobile_toggler.kt-header-mobile__toggler.kt-header-mobile__toggler--left
          %span
    / end:: Header Mobile
    .kt-grid.kt-grid--hor.kt-grid--root
      .kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--ver.kt-page
        / begin:: Aside
        %button#kt_aside_close_btn.kt-aside-close
          %i.la.la-close
        #kt_aside.kt-aside.kt-aside--fixed.kt-grid__item.kt-grid.kt-grid--desktop.kt-grid--hor-desktop
          / begin:: Aside
          = render partial: "/layouts/admin_layout/aside_tab"
          / end:: Aside
          / begin:: Aside Menu
          = render partial: "/layouts/docs_layout/aside_menu"
          / end:: Aside Menu
        / end:: Aside
        #kt_wrapper.kt-grid__item.kt-grid__item--fluid.kt-grid.kt-grid--hor.kt-wrapper
          = yield
          = render partial: "/layouts/admin_layout/footer"
          / end:: Footer
    / end:: Page
    / begin::Scrolltop
    #kt_scrolltop.kt-scrolltop
      %i.fa.fa-arrow-up
    / end::Scrolltop
    / begin::Global Config(global config for global JS sciprts)
    :javascript
      var KTAppOptions = {"colors":{"state":{"brand":"#5d78ff","dark":"#282a3c","light":"#ffffff","primary":"#5867dd","success":"#34bfa3","info":"#36a3f7","warning":"#ffb822","danger":"#fd3995"},"base":{"label":["#c5cbe3","#a1a8c3","#3d4465","#3e4466"],"shape":["#f0f3ff","#d9dffa","#afb4d4","#646c9a"]}}};
    / end::Global Config
    / begin::Global Theme Bundle(used by all pages)
    %script{src: "/assets/admin_theme/vendors/global/vendors.bundle.js", type: "text/javascript"}
    %script{src: "/assets/admin_theme/js/demo1/scripts.bundle.js", type: "text/javascript"}
    / end::Global Theme Bundle
    / begin::Page Vendors(used by this page)
    %script{src: "/assets/admin_theme/vendors/custom/fullcalendar/fullcalendar.bundle.js", type: "text/javascript"}
    %script{src: "http://maps.google.com/maps/api/js?key=AIzaSyBTGnKT7dt597vo9QgeQ7BFhvSRP4eiMSM", type: "text/javascript"}
    %script{src: "/assets/admin_theme/vendors/custom/gmaps/gmaps.js", type: "text/javascript"}
    / end::Page Vendors
    / begin::Page Scripts(used by this page)
    %script{src: "/assets/admin_theme/js/demo1/pages/dashboard.js", type: "text/javascript"}
    / end::Page Scripts

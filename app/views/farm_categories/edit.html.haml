= form_for @farm, url: farm_category_path(@farm), html: { method: :put } do |f|
  %section.content
    %header.content__title
      %h1 Farm Categories
    .card
      .card-body
        %h4.card-title Add Categories
        %h6.card-subtitle For quick search farm select categories by clicking each Category which is available.

      .listview
        = f.collection_check_boxes :category_ids, Category.all, :id, :title do |c|
          .listview__item.pb-0.pt-0
            .checkbox
              = c.check_box class: 'checkbox__input'
              = c.label class: 'checkbox__label'

      .clearfix
      .card-body.pt-0
        %button.btn.btn-success{type: "submit"} Update Category

.kt-portlet
  .kt-portlet__head
    .kt-portlet__head-label
      %h3.kt-portlet__head-title
        Billing Information

    .kt-portlet__head-toolbar
      .kt-portlet__head-wrapper
        = link_to subscriptions_path, class: 'btn btn-clean btn-icon-sm' do
          %i.la.la-long-arrow-left
          Back

  / begin::Form
  %form#kt_form_2.kt-form.kt-form--label-right
    .kt-portlet__body
      .kt-section
        %h3.kt-section__title
          Payment Details:
        .kt-section__content
          .form-group.row
            .col-lg-12
              %label.form-control-label * Cardholder Name:
              %input.form-control{:name => "billing_card_name", :placeholder => "", :type => "text", :value => ""}
          .form-group.row
            .col-lg-12
              %label.form-control-label * Card Number:
              %input.form-control{:name => "billing_card_number", :placeholder => "", :type => "text", :value => ""}
          .form-group.form-group-last.row
            .col-lg-4.form-group-sub
              %label.form-control-label * Exp Month:
              %select.form-control{:name => "billing_card_exp_month"}
                %option{:value => ""} Select
                %option{:value => "01"} 01
                %option{:value => "02"} 02
                %option{:value => "03"} 03
                %option{:value => "04"} 04
                %option{:value => "05"} 05
                %option{:value => "06"} 06
                %option{:value => "07"} 07
                %option{:value => "08"} 08
                %option{:value => "09"} 09
                %option{:value => "10"} 10
                %option{:value => "11"} 11
                %option{:value => "12"} 12
            .col-lg-4.form-group-sub
              %label.form-control-label * Exp Year:
              %select.form-control{:name => "billing_card_exp_year"}
                %option{:value => ""} Select
                %option{:value => "2018"} 2018
                %option{:value => "2019"} 2019
                %option{:value => "2020"} 2020
                %option{:value => "2021"} 2021
                %option{:value => "2022"} 2022
                %option{:value => "2023"} 2023
                %option{:value => "2024"} 2024
            .col-lg-4.form-group-sub
              %label.form-control-label * CVV:
              %input.form-control{:name => "billing_card_cvv", :placeholder => "", :type => "number", :value => ""}
      .kt-separator.kt-separator--border-dashed.kt-separator--space-xl
      .kt-section
        %h3.kt-section__title
          Billing Address
          %i.kt-section__help{"data-toggle" => "kt-tooltip", "data-width" => "auto", :title => "If different than the corresponding address"}
        .kt-section__content
          .form-group.row
            .col-lg-12
              %label.form-control-label * Address 1:
              %input.form-control{:name => "billing_address_1", :placeholder => "", :type => "text", :value => ""}
          .form-group.row
            .col-lg-12
              %label.form-control-label Address 2:
              %input.form-control{:name => "billing_address_2", :placeholder => "", :type => "text", :value => ""}
          .form-group.form-group-last.row
            .col-lg-5.form-group-sub
              %label.form-control-label * City:
              %input.form-control{:name => "billing_city", :placeholder => "", :type => "text", :value => ""}
            .col-lg-5.form-group-sub
              %label.form-control-label * State:
              %input.form-control{:name => "billing_state", :placeholder => "", :type => "text", :value => ""}
            .col-lg-2.form-group-sub
              %label.form-control-label * ZIP:
              %input.form-control{:name => "billing_zip", :placeholder => "", :type => "text", :value => ""}
      .kt-separator.kt-separator--border-dashed.kt-separator--space-xl

    .kt-portlet__foot
      .kt-form__actions
        .row
          .col-lg-12
            %button.btn.btn-brand{:type => "submit"} Submit
            = link_to 'Cancel', subscriptions_path, class: 'btn btn-secondary'

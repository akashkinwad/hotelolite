.col-xl-12
  .kt-portlet.kt-portlet--height-fluid
    .kt-portlet__head
      .kt-portlet__head-label
        %h3.kt-portlet__head-title
      .kt-portlet__body.kt-portlet__body--fluid
        = form_for @api_token do |f|
          .form-group.row
            %label.col-sm-4.col-form-label.text-md-right Token Name
            .col-sm-6
              = f.text_field :name, required: true, placeholder: "Enter API Token name", class: "form-control", id: 'api-token-name'
            .col-sm-2
              = f.submit "Update", id: "api-token-submit", class: "btn btn-primary"

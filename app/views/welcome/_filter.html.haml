.col-xs-12.col-sm-4.col-md-3
  .sidebar.bg-white.clearfix.box-shadow
    .sidebar-block
      = form_tag search_welcome_index_url, method: :get do
        %h4.sidebar-title.color-dark-2 search by name
        .search-inputs
          .form-block.clearfix
            .input-style-1.b-50.color-3
              = text_field_tag :title, params[:title], include_blank: false, class: 'form-control', placeholder: 'Chaitanya..'
        %input.c-button.b-40.bg-blue-2.hv-blue-2-o{type: "submit", value: "search"}
        = link_to 'Reset', search_welcome_index_path, class: 'c-button b-40 bg-blue-2 hv-blue-2-o'
    .sidebar-block
      = form_tag search_welcome_index_url, method: :get do
        %h4.sidebar-title.color-dark-2 search by category
        .search-inputs
          .form-block.clearfix
            .input-style-1.b-50.color-3
              = text_field_tag :category_id, params[:category_id], include_blank: false, class: 'form-control'
        %input.c-button.b-40.bg-blue-2.hv-blue-2-o{type: "submit", value: "search"}
        = link_to 'Reset', search_welcome_index_path, class: 'c-button b-40 bg-blue-2 hv-blue-2-o'
    .sidebar-block
      %h4.sidebar-title.color-dark-2 search by city
      .drop-wrap.drop-wrap-s-4.color-3
        .drop
          %b Select city
          %a.drop-list{href: "#"}
            %i.fa.fa-angle-down
          %span{style: "display: none;"}
            %a{href: "#"} Pune
            %a{href: "#"} Sangli
            %a{href: "#"} Satara
            %a{href: "#"} Kolhapur
      %input.c-button.b-40.bg-blue-2.hv-blue-2-o{:type => "submit", :value => "search"}
    .sidebar-block
      %h4.sidebar-title.color-dark-2 Distance from Pune
      .slider-range.color-1.clearfix{"data-counter" => "$", "data-from" => "0", "data-max" => "2000", "data-min" => "0", "data-position" => "start", "data-to" => "1500"}
        .range
        %input.amount-start{:readonly => "readonly", :type => "text", :value => "$0"}
        %input.amount-end{:readonly => "readonly", :type => "text", :value => "$1500"}
      %input.c-button.b-40.bg-blue-2.hv-blue-2-o{:type => "submit", :value => "search"}
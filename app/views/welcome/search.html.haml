.inner-banner.caf-inner-banner.d-flex
  %img.center-image{:alt => "", :src => "/assets/user/img/caf/testimonial-bg.jpg"}
  %div
    .container
      %h2.color-white Select Your AGRITOURISM
.list-wrapper.bg-grey-2
  .container
    .row
      = render partial: 'filter'
      .col-xs-12.col-sm-8.col-md-9
        .list-header.clearfix
          .drop-wrap.drop-wrap-s-4.color-4.list-sort.box-shadow
            .drop
              %b Sort by price
              %a.drop-list{:href => "#"}
                %i.fa.fa-angle-down
              %span
                %a{:href => "#"} ASC
                %a{:href => "#"} DESC
          .drop-wrap.drop-wrap-s-4.color-4.list-sort.box-shadow
            .drop
              %b Sort by ranking
              %a.drop-list{:href => "#"}
                %i.fa.fa-angle-down
              %span
                %a{:href => "#"} ASC
                %a{:href => "#"} DESC
          .list-view-change
            .change-grid.color-1.fr.box-shadow
              %i.fa.fa-th
            .change-list.color-1.fr.active.box-shadow
              %i.fa.fa-bars
            .change-to-label.fr.color-grey-8 View:
        .list-content.clearfix
          - if @farms.present?
            - @farms.each do |farm|
              .list-item-entry
                .hotel-item.style-3.bg-white.box-shadow
                  .table-view
                    .radius-top.cell-view
                      %img{:alt => "", :src => "/assets/user/img/tour_list/tour_grid_1.jpg"}
                    .title.hotel-middle.clearfix.cell-view
                      .date.list-hidden
                        July
                        %strong 19th
                        to July
                        %strong 26th
                      .date.grid-hidden
                        %strong 19.07 - 26.07 / 7
                        night
                      %h4
                        %b
                          = farm.title
                      .rate-wrap
                        .rate
                          - farm.stars.times do
                            %span.fa.fa-star.color-yellow
                        %i= "#{farm.reviews} Reviews"
                      %p.f-14.grid-hidden
                        = farm.description
                    .title.hotel-right.clearfix.cell-view
                      .hotel-person.color-dark-2
                        from
                        %span.color-blue $273
                        person
                      = link_to 'view more', welcome_path(farm), class: 'c-button b-40 bg-blue hv-blue-o-o grid-hidden'
          - else
            .list-item-entry
              .hotel-item.style-3.bg-white.box-shadow
                .table-view
                  .title.hotel-middle.clearfix.cell-view
                    %h4
                      %b No Matching seach found...!

        .c_pagination.clearfix.padd-120
          %a.c-button.b-40.bg-blue-2.hv-blue-2-o.fl{:href => "#"} prev page
          %a.c-button.b-40.bg-blue-2.hv-blue-2-o.fr{:href => "#"} next page
          %ul.cp_content.color-1
            %li.active
              %a{:href => "#"} 1
            %li
              %a{:href => "#"} 2
            %li
              %a{:href => "#"} 3
            %li
              %a{:href => "#"} 4
            %li
              %a{:href => "#"} ...
            %li
              %a{:href => "#"} 10

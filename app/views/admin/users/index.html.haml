%header.content__title
  %h1 ALL USER'S
.card
  .card-body
    .table-responsive.data-table
      %table#data-table.table
        %thead
          %tr
            %th Name
            %th Email
            %th Farm
            %th Action
        %tbody
          - @users.each do |user|
            %tr
              %td
                = user.full_name
              %td
                = user.email
              %td
                = link_to user.farm.name, edit_admin_farm_path(user.farm)
              %td
                = link_to edit_admin_user_path(user) do
                  %button.btn.btn-theme-dark.btn--icon
                    %i.zwicon-edit-square
                = link_to admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } do
                  %button.btn.btn-theme-dark.btn--icon
                    %i.zwicon-user-delete

      = paginate @users

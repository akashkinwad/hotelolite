.row{:id => "matches_index"}
  .column.padding-left-column
    %h2
      All Matches
    %p.mt-10.description
      Fetches list of all in play matches.
    %h5.http-request
      Request
    %ul.description
      %li
        Path:&nbsp;
        %code
          = api_v1_matches_url
      %li
        Method:&nbsp; GET
      %li
        Params:
      %ul
        %li Api-Token

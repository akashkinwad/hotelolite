    %script{src: "/assets/admin/vendors/global/vendors.bundle.js", type: "text/javascript"}
    %script{src: "/assets/admin/js/demo1/scripts.bundle.js", type: "text/javascript"}
    / end::Global Theme Bundle
    / begin::Page Scripts(used by this page)
    %script{src: "/assets/admin/js/demo1/pages/login/login-general.js", type: "text/javascript"}
    / end::Page Scripts
